<div class="cover-photo" style="background-image: url(/img/users/cover-photos/<%= @user[:cover_url] %>)"></div>
<div class="container-fluid text-center">
  <div class="profile-pic center-block">
    <img src="/img/users/<%= @user[:photo_url] %>" alt="<%= @user[:name] %>" class="img-responsive img-circle"/>
  </div>
  <h1>Hi, <%= @user[:name] %></h1>
  <h4>Email: <%= @user[:email] %></h4>
  <h4>Address: <%= @user[:address] %></h4>
  <h4>Credit Card: <%= @user[:cc_number] %></h4>
</div>
