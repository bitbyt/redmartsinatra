<div class="container-fluid">
  <h2 class="text-center">Add a Product</h2>
  <div class="divider divider-clear"></div>
  <form class="product row" id="add-product" method="POST" action="/products">
    <div class="form-group col-sm-6">
      <label for="product_name">Name:</label>
      <input type='text' class="form-control" name='product[name]' id="product_name" placeholder="Name"/>
    </div>
    <div class="form-group col-sm-6">
      <label for="product_price">Price:</label>
      <input type='text' class="form-control" name='product[price]' id="product_price" placeholder="Price"/>
    </div>
    <div class="form-group col-sm-12">
      <label for="product_description">Description:</label>
      <textarea class="form-control form-textarea col-sm-12" rows="3" name='product[description]' id="description" placeholder="Product Description"></textarea>
    </div>
    <div class="form-group col-sm-6">
      <label for="product_brand_id">Brand ID:</label>
      <input type='text' class="form-control" name='product[brand_id]' id="brand_id" placeholder="Brand ID"/>
    </div>
    <div class="form-group col-sm-6">
      <label for="product_category_id">Category ID:</label>
      <input type='text' class="form-control" name='product[category_id]' id="category_id" placeholder="Category ID"/>
    </div>
    <div class="form-group col-sm-12">
      <label for="product_photo_url">Photo:</label>
      <input type='text' class="form-control" name='product[photo_url]' id="photo_url" placeholder="Photo URL"/>
    </div>

    <div class="col-sm-6">
      <input type="submit" value="Add this product" name="submit" class="btn btn-submit btn-block">
    </div>
    <div class="col-sm-6">
      <a class="btn btn-lg btn-base btn-block" href="/products">Cancel this shit</a>
    </div>
  </form>
</div>
