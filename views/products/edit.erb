<div class="container-fluid">
  <h3 class="text-center">Got something to change?</h3>
  <div class="divider divider-clear"></div>
  <form action="/products/<%= @product[:id] %>" class="row" id="edit-product" method="POST">
    <input type="hidden" name="_method" value="put">
    <div class="form-group col-sm-6">
      <label for="product_name">Name:</label>
      <input type='text' class="form-control" name='product[name]' id="product_name" value="<%= @product[:name] %>"/>
    </div>
    <div class="form-group col-sm-6">
      <label for="product_price">Price:</label>
      <input type='text' class="form-control" name='product[price]' id="product_price" value="<%= @product[:price] %>"/>
    </div>
    <div class="form-group col-sm-12">
      <label for="product_description">Description:</label>
      <textarea class="form-control form-textarea col-sm-12" rows="3" name='product[description]' id="description" value="<%= @product[:description] %>"><%= @product[:description] %></textarea>
    </div>
    <div class="form-group col-sm-6">
      <label for="product_brand_id">Brand ID:</label>
      <input type='text' class="form-control" name='product[brand_id]' id="brand_id" value="<%= @product[:brand_id] %>"/>
    </div>
    <div class="form-group col-sm-6">
      <label for="product_category_id">Category ID:</label>
      <input type='text' class="form-control" name='product[category_id]' id="category_id" value="<%= @product[:category_id] %>"/>
    </div>
    <div class="form-group col-sm-12">
      <label for="product_photo_url">Photo:</label>
      <input type='text' class="form-control" name='product[photo_url]' id="photo_url" value="<%= @product[:photo_url] %>"/>
    </div>

    <div class="col-sm-6">
      <input type="submit" value="Save it" name="submit" class="btn btn-submit btn-block">
    </div>
    <div class="col-sm-6">
      <a class="btn btn-lg btn-base btn-block" href="/products">Cancel this shit</a>
    </div>
  </form>
</div>
