<div class="container-fluid text-center">
  <div class="row">
    <div class="col-sm-6 col-centered card product-card">
      <div class="photo product-pic" style="background-image: url(/img/products/<%= @product[:photo_url] %>)"></div>
      <div class="content">
        <h1><%= @product[:name] %></h1>
        <h3>Price: <%= @product[:price] %></h3>
        <h4>Description: <%= @product[:description] %></h4>
        <div class="divider divider-light divider-clear-xs"></div>
        <h4>Brand: <%= @product[:brand_id] %> | Category: <%= @product[:category_id] %></h4>
      </div>
    </div>
  </div>
</div>
