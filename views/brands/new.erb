<div class="container-fluid">
  <h2 class="text-center">Add a Brand</h2>
  <div class="divider divider-clear"></div>
  <form class="brand row" id="add-brand" method="POST" action="/brands">
    <div class="form-group col-sm-6">
      <label for="brand_name">Brand Name:</label>
      <input type='text' class="form-control" name='brand[name]' id="brand_name" placeholder="Brand Name"/>
    </div>
    <div class="form-group col-sm-6">
      <label for="brand_photo_url">Brand Logo:</label>
      <input type='text' class="form-control" name='brand[photo_url]' id="photo_url" placeholder="Photo URL"/>
    </div>

    <div class="col-sm-6">
      <input type="submit" value="Add this brand" name="submit" class="btn btn-submit btn-block">
    </div>
    <div class="col-sm-6">
      <a class="btn btn-lg btn-base btn-block" href="/brands">Cancel this shit</a>
    </div>
  </form>
</div>
