<div class="container-fluid">
  <h3 class="text-center">Got something to change?</h3>
  <div class="divider divider-clear"></div>
  <form action="/brands/<%= @brand[:id] %>" class="row" id="edit-brand" method="POST">
    <input type="hidden" name="_method" value="put">
    <div class="form-group col-sm-6">
      <label for="brand_name">Brand Name:</label>
      <input type='text' class="form-control" name='brand[brand]' id="brand_name" value="<%= @brand[:name] %>"/>
    </div>
    <div class="form-group col-sm-6">
      <label for="brand_photo_url">Brand Logo:</label>
      <input type='text' class="form-control" name='brand[photo_url]' id="photo_url" value="<%= @brand[:photo_url] %>"/>
    </div>

    <div class="col-sm-6">
      <input type="submit" value="Save it" name="submit" class="btn btn-submit btn-block">
    </div>
    <div class="col-sm-6">
      <a class="btn btn-lg btn-base btn-block" href="/brands">Cancel this shit</a>
    </div>
  </form>
</div>
